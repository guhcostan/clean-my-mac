{
  "name": "clean-my-mac-cli",
  "version": "1.0.0",
  "description": "Open source CLI tool to clean your Mac - similar to CleanMyMac",
  "type": "module",
  "bin": {
    "clean-my-mac": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup src/index.ts --format esm --dts --clean",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mac",
    "cleaner",
    "macos",
    "cleanup",
    "cache",
    "cli",
    "cleanmymac",
    "disk-space",
    "system-maintenance",
    "junk-files"
  ],
  "author": "",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guhcostan/clean-my-mac.git"
  },
  "bugs": {
    "url": "https://github.com/guhcostan/clean-my-mac/issues"
  },
  "homepage": "https://github.com/guhcostan/clean-my-mac#readme",
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.0.4",
    "eslint": "^9.39.1",
    "tsup": "^8.0.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "ora": "^8.0.1"
  },
  "engines": {
    "node": ">=18"
  },
  "os": [
    "darwin"
  ]
}
